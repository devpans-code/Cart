<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>CartApplication</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.cartapp.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.cartapp.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Product</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Product</servlet-name>
    <servlet-class>com.cartapp.servlet.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Customer</servlet-name>
    <url-pattern>/customer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Customer</servlet-name>
    <servlet-class>com.cartapp.servlet.CustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Order</servlet-name>
    <url-pattern>/order</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Order</servlet-name>
    <servlet-class>com.cartapp.servlet.OrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Cart</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Cart</servlet-name>
    <servlet-class>com.cartapp.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>UpdateCart</servlet-name>
  	<url-pattern>/update-cart</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>UpdateCart</servlet-name>
  	<servlet-class>com.cartapp.servlet.UpdateCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.cartapp.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Search</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>Search</servlet-name>
  	<servlet-class>com.cartapp.servlet.SearchProductServlet</servlet-class>
  </servlet>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <listener>
    <listener-class>com.cartapp.model.SessionCounter</listener-class>
  </listener>
  <filter>
    <filter-name>AuthLogin</filter-name>
    <filter-class>com.cartapp.filter.LoginAuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthLogin</filter-name>
    <url-pattern>/product</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthLogin</filter-name>
    <url-pattern>/order</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthLogin</filter-name>
    <url-pattern>/cart</url-pattern>
  </filter-mapping>
</web-app>